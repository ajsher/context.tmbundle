#!/usr/bin/env ruby

$:.unshift  File.join(File.dirname(__FILE__), "..", "lib")
require "parse_texexec_output"

require ENV["TM_SUPPORT_PATH"] + "/lib/tm/executor"
require ENV["TM_SUPPORT_PATH"] + "/lib/tm/save_current_document"

engine = ENV['CTX_ENGINE']=="xetex" ? "--xtx" : ""

TextMate.save_current_document
TextMate::Executor.run("texmfstart","texexec",engine, "--pass=-halt-on-error -file-line-error",ENV['TM_FILEPATH'] ) do |str, type|
  case type
  when :err
    # do special transformation of stderr
    str = "<span class=\"err\">#{htmlize(str)}</span>"
  when :out
    # special transformation of stdout
    str = ctx_htmlize(str)
  end
end
